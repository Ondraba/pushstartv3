{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "jsx": "preserve",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types"],
        "lib": ["dom", "esnext"],
        "paths": {
            "@client/*": ["client/*"],
            "@graphql-model": ["shared/graphql.ts"]
        }
    },
    "include": ["client", "lang", "pages", "shared"]
}
